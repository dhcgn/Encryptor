<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Border" x:Key="DropAreaBorderStyle" >
        <Setter Property="Background" Value="#B3FF0000" />
        <Setter Property="Panel.ZIndex" Value="1" />
    </Style>

    <Style TargetType="TextBlock" x:Key="DropAreaTextBlockStyle" >
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="50" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Text" Value="Drop file" />
    </Style>

    <Style TargetType="Button" x:Key="GoButtonStyle" >
        <Setter Property="Margin" Value="5" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="CornflowerBlue" />
    </Style>

    <Style TargetType="ToggleButton" x:Key="ToggleButtonStyle" >
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="CheckBox" x:Key="CheckBoxStyle" >
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>